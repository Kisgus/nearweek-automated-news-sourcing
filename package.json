{
  "name": "nearweek-automated-news-sourcing",
  "version": "2.0.0",
  "description": "NEARWEEK Multi-Stream Content Generation System with Figma Integration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start-production": "NODE_ENV=production node src/server.js",
    "deploy": "bash scripts/quick-deploy.sh",
    "test": "node scripts/test-mcp-integrations.js",
    "health": "curl http://localhost:3000/health",
    "metrics": "curl http://localhost:3000/api/metrics",
    "test-webhook": "curl -X POST http://localhost:3000/webhook/x-api -H 'Content-Type: application/json' -d '{\"id\":\"test123\",\"text\":\"Test webhook with AI and crypto keywords\",\"author\":{\"username\":\"test\"},\"public_metrics\":{\"like_count\":50}}'",
    "test-analysis": "curl -X POST http://localhost:3000/api/analyze -H 'Content-Type: application/json' -d '{\"text\":\"NEAR Protocol launches AI infrastructure\",\"source\":\"verified_account\",\"engagement\":500}'",
    "pause": "curl -X POST http://localhost:3000/api/admin/pause",
    "resume": "curl -X POST http://localhost:3000/api/admin/resume",
    "logs": "tail -f logs/automation.log",
    "errors": "tail -f logs/error.log",
    "content:nearweek": "node scripts/multi-stream-content-generator.js nearweek",
    "content:defi": "node scripts/multi-stream-content-generator.js defi",
    "content:nft": "node scripts/multi-stream-content-generator.js nft",
    "content:gaming": "node scripts/multi-stream-content-generator.js gaming",
    "content:all": "node scripts/multi-stream-content-generator.js all",
    "scheduler:start": "node scripts/stream-scheduler.js start",
    "scheduler:stop": "node scripts/stream-scheduler.js stop",
    "scheduler:status": "node scripts/stream-scheduler.js status",
    "scheduler:test": "node scripts/stream-scheduler.js test nearweek",
    "runway:video": "node scripts/runway-video-processor.js",
    "runway:test": "node scripts/runway-nearweek-test.js",
    "twitter:mock": "node scripts/query-near-ecosystem-handles.js",
    "twitter:real": "node scripts/query-near-ecosystem-handles-real.js",
    "twitter:critical": "node scripts/query-near-ecosystem-handles-real.js --critical-only",
    "news:generate": "node scripts/generate-news-from-twitter-handles.js",
    "webhook:test": "node scripts/integrate-twitter-handles-to-webhook.js --dry-run",
    "api:status": "node scripts/diagnose-twitter-api-issue.js",
    "api:test": "node scripts/test-twitter-api-connection.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "sharp": "^0.33.2",
    "twitter-api-v2": "^1.24.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "nearweek",
    "automation",
    "news",
    "ai",
    "crypto",
    "mcp",
    "buffer",
    "telegram",
    "figma",
    "content-generation",
    "multi-stream"
  ],
  "author": "NEARWEEK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kisgus/nearweek-automated-news-sourcing.git"
  }
}